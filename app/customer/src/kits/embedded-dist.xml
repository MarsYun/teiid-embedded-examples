<!--This script builds a zip for Embedded Installation -->
<assembly>

    <id>embedded-dist</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    
    <files>
        <file>
            <source>${project.build.directory}/${artifactId}.war</source>
            <outputDirectory>service</outputDirectory>
        </file>
    </files>
 
</assembly>
